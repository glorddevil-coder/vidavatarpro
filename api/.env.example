# AuraStudio AI - API Server Configuration
# Copy this to .env and fill in your values

# === App Configuration ===
APP_NAME=AuraStudio AI API
DEBUG=False

# === Database ===
DATABASE_URL=postgresql://user:password@localhost:5432/aurastudio
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here

# === API Keys ===
OPENAI_API_KEY=sk-...
ELEVENLABS_API_KEY=your_elevenlabs_key
SYNC_LABS_API_KEY=your_sync_labs_key
MODAL_API_KEY=your_modal_key
REPLICATE_API_KEY=your_replicate_key

# === AWS S3 Configuration ===
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=aurastudio-assets
AWS_REGION=us-east-1

# === Server Configuration ===
HOST=0.0.0.0
PORT=8000

# === CORS Origins ===
CORS_ORIGINS=["http://localhost:3000", "http://localhost:19006", "http://localhost:5173"]

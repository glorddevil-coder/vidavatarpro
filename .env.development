DEEPL_API_TYPE=free

# ==========================================
# Redis Configuration (Cache)
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400
REDIS_ENABLED=false

# ==========================================
# Audio Processing
# ==========================================
LIBROSA_CACHE_DIR=./cache/librosa
AUDIO_SAMPLE_RATE=22050
AUDIO_MAX_DURATION=600

# ==========================================
# Memory & Storage
# ==========================================
MEMORY_VECTOR_DIMENSION=1536
MEMORY_SIMILARITY_THRESHOLD=0.75
MEMORY_CONSOLIDATION_DAYS=30

# ==========================================
# Security & Blockchain
# ==========================================
WEB3_PROVIDER_URL=http://localhost:8545
ETHEREUM_CHAIN_ID=31337
ETHEREUM_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
BLOCKCHAIN_ENABLED=false

# ==========================================
# JWT & Authentication
# ==========================================
JWT_SECRET_KEY=your_super_secret_dev_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==========================================
# Logging & Monitoring
# ==========================================
LOG_LEVEL=DEBUG
SENTRY_DSN=
SENTRY_ENABLED=false

# ==========================================
# CORS & Security
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# ==========================================
# Feature Flags
# ==========================================
FEATURE_MEMORY_ENGINE=true
FEATURE_TRANSLATOR=true
FEATURE_BONDING_SYSTEM=true
FEATURE_HEALTH_MONITOR=true
FEATURE_AUTONOMOUS_AGENTS=true
FEATURE_VOICE_DNA_NFT=true
FEATURE_AI_WATERMARKING=true

# ==========================================
# Development Tools
# ==========================================
PYTEST_ENABLED=true
MOCK_EXTERNAL_APIS=true
DATABASE_RESET_ON_START=false
SEED_SAMPLE_DATA=true
